generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int       @id @default(autoincrement())
  name      String
  email     String    @unique
  password  String
  createdAt DateTime  @default(now())
  events    Event[]   @relation("Organizer")                // Relaci贸n uno a muchos (organizador de eventos)
  registrations Registration[]                              // Relaci贸n muchos a muchos (inscripciones)
}

model Event {
  id          Int       @id @default(autoincrement())
  title       String
  description String
  date        DateTime
  location    String
  organizerId Int
  organizer   User      @relation("Organizer", fields: [organizerId], references: [id]) // Relaci贸n inversa (organizador)
  registrations  Registration[]                                                         // Relaci贸n muchos a muchos (inscripciones)
}

model Registration {
  id      Int     @id @default(autoincrement())
  userId  Int
  eventId Int
  user    User    @relation(fields: [userId], references: [id])
  event   Event   @relation(fields: [eventId], references: [id])

  @@unique([userId, eventId]) // Evita inscripciones duplicadas
}
